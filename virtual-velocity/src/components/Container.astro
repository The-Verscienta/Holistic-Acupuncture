---
export interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  class?: string;
}

const {
  size = 'xl',
  class: className = '',
} = Astro.props;

// Size styles
const sizeStyles = {
  sm: 'max-w-2xl',    // 672px
  md: 'max-w-4xl',    // 896px
  lg: 'max-w-6xl',    // 1152px
  xl: 'max-w-7xl',    // 1280px
  full: 'max-w-full',
};

const baseStyles = 'mx-auto px-4 sm:px-6 lg:px-8';
const combinedClasses = `${baseStyles} ${sizeStyles[size]} ${className}`;
---

<div class={combinedClasses}>
  <slot />
</div>
