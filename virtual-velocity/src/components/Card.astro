---
export interface Props {
  variant?: 'default' | 'bordered' | 'elevated' | 'flat';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  hoverable?: boolean;
  href?: string;
  class?: string;
}

const {
  variant = 'default',
  padding = 'md',
  hoverable = false,
  href,
  class: className = '',
} = Astro.props;

// Base styles
const baseStyles = 'rounded-[var(--radius-lg)] transition-all duration-300';

// Variant styles
const variantStyles = {
  default: 'bg-white border border-sage-200',
  bordered: 'bg-white border-2 border-sage-300',
  elevated: 'bg-white shadow-[var(--shadow-card)]',
  flat: 'bg-sage-50',
};

// Padding styles
const paddingStyles = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

// Hoverable styles
const hoverStyles = hoverable
  ? 'hover:shadow-[var(--shadow-card-hover)] hover:-translate-y-1 cursor-pointer'
  : '';

// Combined classes
const combinedClasses = `${baseStyles} ${variantStyles[variant]} ${paddingStyles[padding]} ${hoverStyles} ${className}`;
---

{href ? (
  <a href={href} class={combinedClasses}>
    <slot />
  </a>
) : (
  <div class={combinedClasses}>
    <slot />
  </div>
)}
