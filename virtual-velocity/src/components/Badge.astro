---
export interface Props {
  variant?: 'default' | 'success' | 'warning' | 'error' | 'info' | 'outlined';
  size?: 'sm' | 'md' | 'lg';
  rounded?: boolean;
  icon?: boolean;
  class?: string;
}

const {
  variant = 'default',
  size = 'md',
  rounded = true,
  icon = false,
  class: className = '',
} = Astro.props;

// Base styles
const baseStyles = 'inline-flex items-center gap-2 font-medium';

// Variant styles
const variantStyles = {
  default: 'bg-sage-100 text-sage-700',
  success: 'bg-success/10 text-success',
  warning: 'bg-warning/10 text-warning',
  error: 'bg-error/10 text-error',
  info: 'bg-healing-blue/10 text-healing-blue',
  outlined: 'bg-transparent border border-gray-300 text-gray-600',
};

// Size styles
const sizeStyles = {
  sm: 'px-2 py-1 text-xs',
  md: 'px-3 py-1.5 text-sm',
  lg: 'px-4 py-2 text-base',
};

// Rounded styles
const roundedStyles = rounded ? 'rounded-full' : 'rounded-[var(--radius-sm)]';

// Combined classes
const combinedClasses = `${baseStyles} ${variantStyles[variant]} ${sizeStyles[size]} ${roundedStyles} ${className}`;
---

<span class={combinedClasses}>
  {icon && (
    <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
    </svg>
  )}
  <slot />
</span>
