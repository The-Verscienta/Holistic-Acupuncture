---
const navigation = [
  { name: 'About', href: '/about' },
  { name: 'Services', href: '/services' },
  { name: 'Conditions', href: '/conditions' },
  { name: 'Reviews', href: '/reviews' },
  { name: 'Blog', href: '/blog' },
  { name: 'FAQ', href: '/faq' },
  { name: 'Contact', href: '/contact' },
];
---

<nav class="flex items-center gap-1">
  {navigation.map(item => (
    <a
      href={item.href}
      class="px-3 py-2 text-gray-600 hover:text-sage-700 font-medium transition-colors relative group"
    >
      {item.name}
      <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-tcm-red transition-all duration-300 group-hover:w-full"></span>
    </a>
  ))}
</nav>
