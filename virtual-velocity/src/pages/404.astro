---
import BaseLayout from '../layouts/BaseLayout.astro';
import Container from '../components/Container.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
import { CONTACT } from '../lib/config';
---

<BaseLayout
  title="Page Not Found"
  description="The page you're looking for doesn't exist. Return to our homepage or explore our services."
>
  <section class="py-16 md:py-24 lg:py-32 bg-gradient-to-br from-sage-50 to-warm-white min-h-[70vh] flex items-center">
    <Container>
      <div class="max-w-2xl mx-auto text-center">
        <!-- Large 404 -->
        <div class="mb-8">
          <h1 class="text-9xl md:text-[12rem] font-heading font-bold text-sage-200 leading-none">
            404
          </h1>
          <div class="-mt-8 md:-mt-12">
            <svg class="w-24 h-24 md:w-32 md:h-32 mx-auto text-sage-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>

        <h2 class="text-3xl md:text-4xl font-heading font-bold text-charcoal mb-4">
          Oops! Page Not Found
        </h2>
        <p class="text-lg md:text-xl text-gray-600 mb-8 leading-relaxed">
          The page you're looking for seems to have wandered off. Don't worry, we'll help you find your way back to wellness.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <Button variant="primary" size="lg" icon="arrow-right" iconPosition="left" href="/">
            Return Home
          </Button>
          <Button variant="tertiary" size="lg" icon="calendar" href="/contact">
            Book Appointment
          </Button>
        </div>

        <!-- Quick Links -->
        <Card variant="bordered" padding="lg" class="bg-white text-left">
          <h3 class="text-xl font-heading font-semibold text-charcoal mb-4 text-center">
            Popular Pages
          </h3>
          <div class="grid sm:grid-cols-2 gap-3">
            <a href="/about" class="flex items-center gap-2 text-sage-600 hover:text-sage-700 font-medium transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span>About Us</span>
            </a>
            <a href="/conditions" class="flex items-center gap-2 text-sage-600 hover:text-sage-700 font-medium transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span>Conditions We Treat</span>
            </a>
            <a href="/acupuncture" class="flex items-center gap-2 text-sage-600 hover:text-sage-700 font-medium transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span>About Acupuncture</span>
            </a>
            <a href="/reviews" class="flex items-center gap-2 text-sage-600 hover:text-sage-700 font-medium transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span>Patient Reviews</span>
            </a>
            <a href="/blog" class="flex items-center gap-2 text-sage-600 hover:text-sage-700 font-medium transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span>Blog & Resources</span>
            </a>
            <a href="/contact" class="flex items-center gap-2 text-sage-600 hover:text-sage-700 font-medium transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span>Contact Us</span>
            </a>
          </div>
        </Card>

        <!-- Help Section -->
        <div class="mt-12">
          <p class="text-gray-600 mb-4">
            Need immediate assistance?
          </p>
          <div class="flex items-center justify-center gap-6 text-sm">
            <a href={`tel:+1${CONTACT.phone.replace(/\D/g, '')}`} class="flex items-center gap-2 text-sage-600 hover:text-sage-700 font-medium">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              Call {CONTACT.phone}
            </a>
            <a href={`mailto:${CONTACT.email}`} class="flex items-center gap-2 text-sage-600 hover:text-sage-700 font-medium">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              Email Us
            </a>
          </div>
        </div>
      </div>
    </Container>
  </section>
</BaseLayout>
