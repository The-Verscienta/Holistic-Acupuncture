---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Container from '../../components/Container.astro';
import Card from '../../components/Card.astro';
import Badge from '../../components/Badge.astro';
import HybridImage from '../../components/HybridImage.astro';
import { getAllBlogPosts, getBlogPostBySlug, getRelatedBlogPosts } from '../../lib/sanityQueries';
import { formatDate, decodeHtmlEntities } from '../../lib/sanity';
import { categoryLabels } from '../../types/sanity';
import { PortableText } from '@portabletext/react';

export async function getStaticPaths() {
  const posts = await getAllBlogPosts();

  // Fetch full post data and related posts for each post
  const fullPosts = await Promise.all(
    posts.map(async (post) => {
      const fullPost = await getBlogPostBySlug(post.slug.current);
      const relatedPosts = fullPost
        ? await getRelatedBlogPosts(post.slug.current, fullPost.category, 3)
        : [];
      return {
        params: { slug: post.slug.current },
        props: { post: fullPost, relatedPosts },
      };
    })
  );

  return fullPosts;
}

const { post, relatedPosts } = Astro.props;

// Handle null post
if (!post) {
  return Astro.redirect('/blog');
}

// Render portable text to HTML
function renderPortableText(blocks: any[]) {
  return blocks
    .map((block) => {
      if (block._type === 'block') {
        // Get the text content
        let content = block.children
          .map((child: any) => {
            let text = child.text || '';

            // Apply marks
            if (child.marks && child.marks.length > 0) {
              child.marks.forEach((mark: string) => {
                if (mark === 'strong') {
                  text = '<strong>' + text + '</strong>';
                } else if (mark === 'em') {
                  text = '<em>' + text + '</em>';
                } else if (mark === 'code') {
                  text = '<code class="bg-gray-100 px-2 py-1 rounded text-sm">' + text + '</code>';
                } else {
                  // Check if this mark is a link annotation
                  const linkDef = block.markDefs?.find((def: any) => def._key === mark);
                  if (linkDef && linkDef._type === 'link' && linkDef.href) {
                    text = '<a href="' + linkDef.href + '" class="text-sage-600 hover:text-sage-700 underline" target="_blank" rel="noopener noreferrer">' + text + '</a>';
                  }
                }
              });
            }

            return text;
          })
          .join('');

        // Handle content with newlines (from WordPress migration)
        // Split on newlines and wrap each line in a paragraph
        if (content.includes('\n')) {
          const paragraphs = content
            .split('\n')
            .filter((p: string) => p.trim())
            .map((p: string) => '<p class="text-gray-700 leading-relaxed mb-6">' + p.trim() + '</p>')
            .join('');
          return paragraphs;
        }

        // Wrap in appropriate tag based on style
        const style = block.style || 'normal';
        if (style === 'h1') return '<h1 class="text-4xl font-heading font-bold text-charcoal mt-12 mb-6">' + content + '</h1>';
        if (style === 'h2') return '<h2 class="text-3xl font-heading font-bold text-charcoal mt-10 mb-5">' + content + '</h2>';
        if (style === 'h3') return '<h3 class="text-2xl font-heading font-bold text-charcoal mt-8 mb-4">' + content + '</h3>';
        if (style === 'h4') return '<h4 class="text-xl font-heading font-semibold text-charcoal mt-6 mb-3">' + content + '</h4>';
        if (style === 'blockquote') return '<blockquote class="border-l-4 border-sage-500 pl-6 py-2 my-6 italic text-gray-700">' + content + '</blockquote>';

        return '<p class="text-gray-700 leading-relaxed mb-6">' + content + '</p>';
      }

      // Handle images
      if (block._type === 'image') {
        const alt = block.alt || '';
        let src = block._sanityAsset || '';

        // Strip 'image@' prefix if present (from migration)
        if (src.startsWith('image@')) {
          src = src.substring(6);
        }

        return '<figure class="my-8"><img src="' + src + '" alt="' + alt + '" class="rounded-lg shadow-md w-full" />' + (alt ? '<figcaption class="text-sm text-gray-600 mt-2 text-center">' + alt + '</figcaption>' : '') + '</figure>';
      }

      // Handle other block types
      return '';
    })
    .join('');
}

const contentHtml = post.body ? renderPortableText(post.body) : '';
---

<BaseLayout
  title={decodeHtmlEntities(post.title)}
  description={decodeHtmlEntities(post.excerpt)}
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-sage-50 to-warm-white py-16 md:py-20">
    <Container size="md">
      <div class="mb-6">
        <a href="/blog" class="inline-flex items-center gap-2 text-sage-600 hover:text-sage-700 font-medium transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Blog
        </a>
      </div>

      <Badge variant="default" size="md" class="mb-4">
        {categoryLabels[post.category] || post.category}
      </Badge>

      <h1 class="text-4xl md:text-5xl font-heading font-bold text-charcoal mb-6 leading-tight">
        {decodeHtmlEntities(post.title)}
      </h1>

      <div class="flex flex-wrap items-center gap-4 text-gray-600 mb-8">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span>{formatDate(post.publishedAt)}</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>{post.readTime} min read</span>
        </div>
        {post.author && (
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span>By {post.author.name}</span>
          </div>
        )}
      </div>

      <!-- Featured Image -->
      {post.featuredImage && (
        <div class="aspect-video rounded-[var(--radius-xl)] shadow-lg overflow-hidden mb-12">
          <HybridImage
            image={post.featuredImage}
            alt={post.featuredImage.alt || post.title}
            width={1200}
            height={675}
            aspectRatio="16/9"
            class="w-full"
            loading="eager"
          />
        </div>
      )}
    </Container>
  </section>

  <!-- Article Content -->
  <section class="py-16 md:py-20 bg-white">
    <Container size="md">
      <div class="prose prose-lg max-w-none">
        <div set:html={contentHtml} />
      </div>

      <!-- Tags -->
      {post.tags && post.tags.length > 0 && (
        <div class="mt-12 pt-8 border-t border-gray-200">
          <h3 class="text-lg font-semibold text-charcoal mb-4">Tags</h3>
          <div class="flex flex-wrap gap-2">
            {post.tags.map((tag) => (
              <Badge variant="outlined" size="sm">{tag}</Badge>
            ))}
          </div>
        </div>
      )}

      <!-- Share Buttons -->
      <div class="mt-12 pt-8 border-t border-gray-200">
        <h3 class="text-lg font-semibold text-charcoal mb-4">Share this article</h3>
        <div class="flex gap-3">
          <button class="p-3 bg-sage-100 hover:bg-sage-200 rounded-[var(--radius-md)] transition-colors">
            <svg class="w-5 h-5 text-sage-700" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </button>
          <button class="p-3 bg-sage-100 hover:bg-sage-200 rounded-[var(--radius-md)] transition-colors">
            <svg class="w-5 h-5 text-sage-700" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </button>
          <button class="p-3 bg-sage-100 hover:bg-sage-200 rounded-[var(--radius-md)] transition-colors">
            <svg class="w-5 h-5 text-sage-700" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </button>
        </div>
      </div>
    </Container>
  </section>

  <!-- Related Posts -->
  {relatedPosts && relatedPosts.length > 0 && (
    <section class="py-16 md:py-20 lg:py-24 bg-sage-50">
      <Container>
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-charcoal mb-12 text-center">
          Related Articles
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          {relatedPosts.map((relatedPost) => (
            <Card variant="elevated" padding="none" hoverable href={`/blog/${relatedPost.slug.current}`}>
              {relatedPost.featuredImage ? (
                <HybridImage
                  image={relatedPost.featuredImage}
                  alt={relatedPost.featuredImage.alt || relatedPost.title}
                  width={400}
                  height={225}
                  aspectRatio="16/9"
                  class="w-full"
                />
              ) : (
                <div class="aspect-video bg-gradient-to-br from-sage-200 to-healing-blue flex items-center justify-center">
                  <svg class="w-12 h-12 text-white opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
              )}
              <div class="p-5">
                <Badge variant="default" size="sm" class="mb-2">
                  {categoryLabels[relatedPost.category] || relatedPost.category}
                </Badge>
                <h3 class="text-lg font-heading font-semibold text-charcoal mb-2 group-hover:text-sage-700 transition-colors line-clamp-2">
                  {decodeHtmlEntities(relatedPost.title)}
                </h3>
                <p class="text-gray-600 text-sm line-clamp-2 mb-3">
                  {decodeHtmlEntities(relatedPost.excerpt)}
                </p>
                <div class="flex items-center justify-between text-xs text-gray-500">
                  <span>{formatDate(relatedPost.publishedAt)}</span>
                  <span class="text-sage-600 font-medium">{relatedPost.readTime} min read</span>
                </div>
              </div>
            </Card>
          ))}
        </div>
        <div class="text-center mt-10">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 px-6 py-3 bg-sage-600 text-white font-semibold rounded-[var(--radius-button)] hover:bg-sage-700 transition-colors"
          >
            View All Articles
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </Container>
    </section>
  )}
</BaseLayout>
