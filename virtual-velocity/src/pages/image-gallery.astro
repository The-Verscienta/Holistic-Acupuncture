---
import { sanityClient } from '../lib/sanity';
import imageUrlBuilder from '@sanity/image-url';

const builder = imageUrlBuilder(sanityClient);

// Query all image assets from Sanity
const images = await sanityClient.fetch(`
  *[_type == "sanity.imageAsset"] | order(_createdAt desc) {
    _id,
    originalFilename,
    url,
    metadata {
      dimensions,
      lqip
    }
  }
`);

function urlFor(imageId: string) {
  return builder.image(imageId).width(400).url();
}
