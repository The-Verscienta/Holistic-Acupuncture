---
import BaseLayout from '../layouts/BaseLayout.astro';
import Container from '../components/Container.astro';
import TestimonialCard from '../components/TestimonialCard.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
import CloudflareImage from '../components/CloudflareImage.astro';
import { getAllTestimonials } from '../lib/sanityQueries';
import { formatRelativeDate } from '../lib/sanity';

// Fetch testimonials from Sanity
const reviews = await getAllTestimonials();
---

<BaseLayout
  title="Patient Reviews"
  description="Read what our patients say about their experience with Acupuncture & Holistic Health Associates. Real reviews from real people who have experienced natural healing."
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-sage-50 to-warm-white py-16 md:py-20">
    <Container>
      <div class="max-w-3xl mx-auto text-center">
        <div class="flex justify-center gap-1 mb-4">
          {[...Array(5)].map(() => (
            <svg class="w-8 h-8 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
          ))}
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-charcoal mb-6">
          Patient Reviews
        </h1>
        <p class="text-lg md:text-xl text-gray-600 leading-relaxed mb-4">
          Discover why our patients trust us with their health and wellness
        </p>
        <div class="flex items-center justify-center gap-8 text-gray-700">
          <div>
            <div class="text-3xl font-heading font-bold text-sage-600">4.9</div>
            <div class="text-sm">Average Rating</div>
          </div>
          <div>
            <div class="text-3xl font-heading font-bold text-sage-600">500+</div>
            <div class="text-sm">Reviews</div>
          </div>
          <div>
            <div class="text-3xl font-heading font-bold text-sage-600">98%</div>
            <div class="text-sm">Would Recommend</div>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Rating Breakdown -->
  <section class="py-12 md:py-16 bg-white border-b border-sage-200">
    <Container>
      <Card variant="bordered" padding="lg" class="max-w-3xl mx-auto">
        <h2 class="text-2xl font-heading font-bold text-charcoal mb-6 text-center">
          Rating Breakdown
        </h2>
        <div class="space-y-3">
          {[
            { stars: 5, count: 487, percentage: 97 },
            { stars: 4, count: 12, percentage: 2 },
            { stars: 3, count: 1, percentage: 0.2 },
            { stars: 2, count: 0, percentage: 0 },
            { stars: 1, count: 0, percentage: 0 },
          ].map(rating => (
            <div class="flex items-center gap-4">
              <div class="flex items-center gap-1 w-24">
                <span class="text-sm font-medium text-gray-700">{rating.stars} stars</span>
              </div>
              <div class="flex-1 bg-gray-200 rounded-full h-3 overflow-hidden">
                <div
                  class="bg-yellow-400 h-full rounded-full transition-all duration-500"
                  style={`width: ${rating.percentage}%`}
                ></div>
              </div>
              <div class="w-16 text-right text-sm text-gray-600">
                {rating.count}
              </div>
            </div>
          ))}
        </div>
      </Card>
    </Container>
  </section>

  <!-- Reviews Grid -->
  <section class="py-16 md:py-20 lg:py-24 bg-sage-50">
    <Container>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {reviews.map(review => (
          <div>
            <TestimonialCard
              quote={review.quote}
              author={review.author}
              condition={review.condition}
              rating={review.rating}
            />
            <p class="text-xs text-gray-500 mt-2 px-2">{formatRelativeDate(review.date)}</p>
          </div>
        ))}
      </div>

    </Container>
  </section>

  <!-- Leave a Review -->
  <section class="py-16 md:py-20 lg:py-24 bg-white">
    <Container>
      <Card variant="elevated" padding="lg" class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-charcoal mb-4">
          Share Your Experience
        </h2>
        <p class="text-lg text-gray-600 mb-8">
          Have you been treated at our practice? We'd love to hear about your experience!
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button variant="primary" size="lg" icon="external" href="https://www.google.com/search?q=acupuncture+holistic+health+associates+milwaukee" target="_blank">
            Write a Google Review
          </Button>
          <Button variant="tertiary" size="lg" icon="mail" href="/contact">
            Send Us Feedback
          </Button>
        </div>
      </Card>
    </Container>
  </section>

  <!-- Awards & Recognition -->
  <section class="py-16 md:py-20 lg:py-24 bg-sage-50">
    <Container>
      <div class="text-center mb-12 md:mb-16">
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-charcoal mb-4">
          Awards & Recognition
        </h2>
        <p class="text-lg text-gray-600">
          Honored to be recognized by our community
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <Card variant="bordered" padding="lg" class="text-center">
          <div class="w-20 h-20 mx-auto mb-3 rounded-xl overflow-hidden">
            <CloudflareImage
              imageId="wp-17309"
              alt="2025 Community Choice Award"
              width={160}
              height={160}
              fit="contain"
              class="w-full h-full object-contain"
            />
          </div>
          <h3 class="font-semibold text-charcoal mb-2">Community Choice</h3>
          <p class="text-sm text-gray-600">2025 Award Winner</p>
        </Card>

        <Card variant="bordered" padding="lg" class="text-center">
          <div class="w-20 h-20 mx-auto mb-3 rounded-xl overflow-hidden">
            <CloudflareImage
              imageId="wp-14060"
              alt="2024 Community Choice Award"
              width={160}
              height={160}
              fit="contain"
              class="w-full h-full object-contain"
            />
          </div>
          <h3 class="font-semibold text-charcoal mb-2">Community Choice</h3>
          <p class="text-sm text-gray-600">2024 Award Winner</p>
        </Card>

        <Card variant="bordered" padding="lg" class="text-center">
          <div class="w-20 h-20 mx-auto mb-3 rounded-xl overflow-hidden">
            <CloudflareImage
              imageId="wp-15397"
              alt="25-Year Anniversary"
              width={160}
              height={160}
              fit="contain"
              class="w-full h-full object-contain"
            />
          </div>
          <h3 class="font-semibold text-charcoal mb-2">25-Year Anniversary</h3>
          <p class="text-sm text-gray-600">Serving Milwaukee Since 1999</p>
        </Card>

        <Card variant="bordered" padding="lg" class="text-center">
          <div class="w-20 h-20 mx-auto mb-3 rounded-xl overflow-hidden bg-sage-100 flex items-center justify-center">
            <svg class="w-10 h-10 text-sage-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-charcoal mb-2">Top Rated</h3>
          <p class="text-sm text-gray-600">4.9 Stars on Google</p>
        </Card>
      </div>
    </Container>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-20 lg:py-24 bg-gradient-to-br from-sage-600 to-healing-blue text-white">
    <Container class="text-center">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold mb-4 md:mb-6">
        Join Our Happy Patients
      </h2>
      <p class="text-lg md:text-xl mb-8 md:mb-10 max-w-2xl mx-auto opacity-90 leading-relaxed">
        Experience the same exceptional care that has earned us over 500 five-star reviews.
      </p>
      <Button variant="secondary" size="lg" icon="calendar" href="/contact">
        Book Your Appointment Today
      </Button>
    </Container>
  </section>
</BaseLayout>
