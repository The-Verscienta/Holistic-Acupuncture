---
import BaseLayout from '../layouts/BaseLayout.astro';
import Container from '../components/Container.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';
import Badge from '../components/Badge.astro';
import SanityImage from '../components/SanityImage.astro';
import CloudflareImage from '../components/CloudflareImage.astro';
import { getAllTeamMembers } from '../lib/sanityQueries';
import { CONTACT } from '../lib/config';

// Fetch team members from Sanity
const teamMembers = await getAllTeamMembers();
---

<BaseLayout
  title="About Us"
  description="Learn about Acupuncture & Holistic Health Associates - Milwaukee's trusted acupuncture practice with over 25 years of experience and 380,000+ successful treatments."
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-sage-50 to-warm-white py-16 md:py-20">
    <Container>
      <div class="max-w-3xl mx-auto text-center">
        <Badge variant="default" size="md" class="mb-6">Est. 1999</Badge>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-charcoal mb-6">
          About Our Practice
        </h1>
        <p class="text-lg md:text-xl text-gray-600 leading-relaxed">
          For over 25 years, we've been dedicated to providing exceptional acupuncture and holistic health care to the Milwaukee community, helping over 380,000 patients find natural healing and wellness.
        </p>
      </div>

      <!-- Staff Group Photo -->
      <div class="mt-12 max-w-5xl mx-auto">
        <div class="aspect-[16/9] rounded-2xl overflow-hidden shadow-lg">
          <CloudflareImage
            imageId="wp-18821"
            alt="The Acupuncture & Holistic Health Associates team"
            width={1200}
            height={675}
            fit="cover"
            loading="eager"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </Container>
  </section>

  <!-- Mission Section -->
  <section class="py-16 md:py-20 lg:py-24 bg-white">
    <Container>
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-heading font-bold text-charcoal mb-6">
            Our Mission
          </h2>
          <div class="space-y-4 text-gray-700 leading-relaxed">
            <p>
              At Acupuncture & Holistic Health Associates, we believe in the body's innate ability to heal itself. Our mission is to facilitate that healing through time-tested traditional Chinese medicine practices combined with modern clinical expertise.
            </p>
            <p>
              We take a whole-person approach to health care, addressing not just symptoms but the root causes of illness. Through individualized treatment plans, we help our patients achieve lasting wellness and optimal health.
            </p>
            <p>
              Our commitment to excellence in patient care, continuous education, and evidence-based practice has made us Milwaukee's most trusted acupuncture clinic for over two decades.
            </p>
          </div>
        </div>

        <div class="space-y-6">
          <Card variant="elevated" padding="lg">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-full bg-sage-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-heading font-semibold text-charcoal mb-2">Patient-Centered Care</h3>
                <p class="text-gray-600">Every treatment plan is customized to your unique needs and health goals.</p>
              </div>
            </div>
          </Card>

          <Card variant="elevated" padding="lg">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-full bg-sage-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-heading font-semibold text-charcoal mb-2">Evidence-Based Practice</h3>
                <p class="text-gray-600">Traditional wisdom meets modern research for optimal outcomes.</p>
              </div>
            </div>
          </Card>

          <Card variant="elevated" padding="lg">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-full bg-sage-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-heading font-semibold text-charcoal mb-2">Compassionate Healing</h3>
                <p class="text-gray-600">We treat you with the care and respect you deserve on your healing journey.</p>
              </div>
            </div>
          </Card>
        </div>
      </div>
    </Container>
  </section>

  <!-- Stats Section -->
  <section class="py-16 md:py-20 lg:py-24 bg-sage-50">
    <Container>
      <div class="text-center mb-12 md:mb-16">
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-charcoal mb-4">
          Experience You Can Trust
        </h2>
        <p class="text-lg md:text-xl text-gray-600">
          Proven results backed by decades of clinical excellence
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <Card variant="elevated" padding="lg" class="text-center">
          <div class="text-5xl font-heading font-bold text-sage-600 mb-3">25+</div>
          <div class="text-lg font-semibold text-charcoal mb-2">Years in Practice</div>
          <div class="text-sm text-gray-600">Serving Milwaukee since 1999</div>
        </Card>

        <Card variant="elevated" padding="lg" class="text-center">
          <div class="text-5xl font-heading font-bold text-sage-600 mb-3">380K+</div>
          <div class="text-lg font-semibold text-charcoal mb-2">Treatments</div>
          <div class="text-sm text-gray-600">Successful patient visits</div>
        </Card>

        <Card variant="elevated" padding="lg" class="text-center">
          <div class="text-5xl font-heading font-bold text-sage-600 mb-3">4.9</div>
          <div class="text-lg font-semibold text-charcoal mb-2">Patient Rating</div>
          <div class="text-sm text-gray-600">Based on 500+ reviews</div>
        </Card>

        <Card variant="elevated" padding="lg" class="text-center">
          <div class="text-5xl font-heading font-bold text-sage-600 mb-3">95%</div>
          <div class="text-lg font-semibold text-charcoal mb-2">Satisfaction Rate</div>
          <div class="text-sm text-gray-600">Patients highly satisfied</div>
        </Card>
      </div>
    </Container>
  </section>

  <!-- Team Section -->
  <section class="py-16 md:py-20 lg:py-24 bg-white">
    <Container>
      <div class="text-center mb-12 md:mb-16">
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-charcoal mb-4">
          Meet Our Team
        </h2>
        <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
          Experienced, licensed acupuncturists dedicated to your health and wellness
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 md:gap-12 max-w-4xl mx-auto">
        {teamMembers.length === 0 ? (
          <div class="md:col-span-2 text-center py-12 px-6 rounded-2xl bg-sage-50 border border-sage-200">
            <p class="text-gray-600 mb-2">No team profiles yet.</p>
            <p class="text-sm text-gray-500">Add practitioners and staff in Sanity Studio under <strong>Team Members</strong>. Each profile can include photo, role, credentials, short bio, and a link to a full profile page.</p>
          </div>
        ) : teamMembers.map((member, index) => {
          // Generate initials from name
          const initials = member.name
            .split(' ')
            .map(word => word[0])
            .join('')
            .toUpperCase()
            .slice(0, 2);

          // Rotate through gradient colors
          const gradients = [
            'from-sage-200 to-healing-blue',
            'from-sage-200 to-earth-orange',
            'from-healing-blue to-sage-300',
            'from-earth-orange to-earth-terracotta',
          ];
          const gradient = gradients[index % gradients.length];

          return (
            <Card variant="elevated" padding="lg">
              <div class="text-center">
                {/* Photo or initials */}
                {member.photo ? (
                  <SanityImage
                    image={member.photo}
                    alt={member.name}
                    width={256}
                    height={256}
                    aspectRatio="1/1"
                    class="w-32 h-32 mx-auto mb-6 rounded-full"
                    sizes="128px"
                    quality={85}
                    loading={index < 3 ? 'eager' : 'lazy'}
                  />
                ) : (
                  <div class={`w-32 h-32 mx-auto mb-6 rounded-full bg-gradient-to-br ${gradient} flex items-center justify-center`}>
                    <span class="text-5xl font-heading font-bold text-sage-700">{initials}</span>
                  </div>
                )}

                {/* Name and role */}
                <h3 class="text-2xl font-heading font-bold text-charcoal mb-2">{member.name}</h3>
                <p class="text-sage-600 font-semibold mb-4">{member.role}</p>

                {/* Badges */}
                <div class="flex flex-wrap gap-2 justify-center mb-6">
                  {member.credentials && (
                    <Badge variant="default" size="sm">{member.credentials}</Badge>
                  )}
                  {member.yearsExperience && (
                    <Badge variant="default" size="sm">{member.yearsExperience}+ Years</Badge>
                  )}
                </div>

                {/* Short bio */}
                {member.shortBio && (
                  <p class="text-gray-600 leading-relaxed mb-6">
                    {member.shortBio}
                  </p>
                )}

                {/* Specialties */}
                {member.specialties && member.specialties.length > 0 && (
                  <div class="space-y-2 text-sm text-gray-600 mb-6">
                    <div class="flex items-center gap-2 justify-center">
                      <svg class="w-4 h-4 text-sage-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                        <path d="M2 13.692V16a2 2 0 002 2h12a2 2 0 002-2v-2.308A24.974 24.974 0 0110 15c-2.796 0-5.487-.46-8-1.308z"></path>
                      </svg>
                      <span>Specialization: {member.specialties.join(', ')}</span>
                    </div>
                  </div>
                )}

                {/* View Profile Link */}
                <a
                  href={`/team/${member.slug.current}`}
                  class="inline-flex items-center gap-2 text-sage-600 hover:text-sage-700 font-medium transition-colors"
                >
                  View Full Profile
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </a>
              </div>
            </Card>
          );
        })}
      </div>
    </Container>
  </section>

  <!-- Certifications & Awards -->
  <section class="py-16 md:py-20 lg:py-24 bg-sage-50">
    <Container>
      <div class="text-center mb-12 md:mb-16">
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-charcoal mb-4">
          Certifications & Recognition
        </h2>
        <p class="text-lg md:text-xl text-gray-600">
          Maintaining the highest standards in acupuncture and holistic medicine
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <Card variant="default" padding="md" class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 bg-sage-100 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-charcoal mb-2">NCCAOM Certified</h3>
          <p class="text-sm text-gray-600">National Certification Commission for Acupuncture & Oriental Medicine</p>
        </Card>

        <Card variant="default" padding="md" class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 bg-sage-100 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-charcoal mb-2">State Licensed</h3>
          <p class="text-sm text-gray-600">Wisconsin Licensed Acupuncturists</p>
        </Card>

        <Card variant="default" padding="md" class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 bg-sage-100 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-charcoal mb-2">Continuing Education</h3>
          <p class="text-sm text-gray-600">150+ hours annually in advanced techniques</p>
        </Card>

        <Card variant="default" padding="md" class="text-center">
          <div class="flex justify-center gap-3 mb-4">
            <CloudflareImage
              imageId="wp-17309"
              alt="2025 Community Choice Award"
              width={64}
              height={64}
              fit="contain"
              class="w-16 h-16 rounded-lg"
            />
            <CloudflareImage
              imageId="wp-15397"
              alt="25-year anniversary"
              width={64}
              height={64}
              fit="contain"
              class="w-16 h-16 rounded-lg"
            />
          </div>
          <h3 class="font-semibold text-charcoal mb-2">Award Winner</h3>
          <p class="text-sm text-gray-600">Milwaukee's Best Acupuncture 2020-2025</p>
        </Card>
      </div>
    </Container>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-20 lg:py-24 bg-gradient-to-br from-sage-600 to-healing-blue text-white">
    <Container class="text-center">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold mb-4 md:mb-6">
        Ready to Start Your Healing Journey?
      </h2>
      <p class="text-lg md:text-xl mb-8 md:mb-10 max-w-2xl mx-auto opacity-90 leading-relaxed">
        Experience the difference that expert care and personalized treatment can make in your life.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="secondary" size="lg" icon="calendar" href="/contact">
          Schedule Consultation
        </Button>
        <Button variant="outline" size="lg" icon="phone" href={`tel:+1${CONTACT.phone.replace(/\D/g, '')}`}>
          Call {CONTACT.phone}
        </Button>
      </div>
    </Container>
  </section>
</BaseLayout>
